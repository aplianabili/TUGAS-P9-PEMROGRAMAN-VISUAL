@model DataBukuApp.Models.Book

@{
    ViewData["Title"] = "Hapus Buku";
}

<h2>Hapus Buku</h2>

<h4>Apakah Anda yakin ingin menghapus buku ini?</h4>

<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Penulis</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Tahun</dt>
        <dd class="col-sm-10">@Model.Year</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Hapus</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>
