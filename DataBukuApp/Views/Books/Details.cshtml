@model DataBukuApp.Models.Book

@{
    ViewData["Title"] = "Detail Buku";
}

<h2>Detail Buku</h2>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Penulis</dt>
        <dd class="col-sm-10">@Model.Author</dd>

        <dt class="col-sm-2">Tahun</dt>
        <dd class="col-sm-10">@Model.Year</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Kembali</a>
